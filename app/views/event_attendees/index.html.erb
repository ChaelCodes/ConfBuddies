<div class="container">
  <h1 class="title">Event Attendees</h1>
  
  <table class="table">
    <thead>
      <tr>
        <th>Profile</th>
        <th>Event</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @event_attendees.each do |event_attendee| %>
        <tr>
          <td><%= event_attendee.profile.name %></td>
          <td><%= event_attendee.event.name %></td>
          <td>
            <%= buttons(event_attendee, include_show: true) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'New Event Attendee', new_event_attendee_path, class: "button is-primary" %>
</div>
