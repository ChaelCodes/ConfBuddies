<div class="container">
  <h1 class="title">Friendships</h1>
  <% if @profile.present? %>
    <h2>You have Friend Requests!</h2>
    <table class="table">
      <% @profile.friend_requests.each do |friendship| %>
        <tr>
          <td><%= link_to friendship.buddy, friendship.buddy %></td>
        </tr>
      <% end %>
    </table>

    <table class="table">
      <thead>
        <tr>
          <th>Friend</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @friendships.each do |friendship| %>
          <tr>
            <td><%= link_to friendship.not_my_profile(@profile), friendship.not_my_profile(@profile) %></td>
            <td><%= friendship.status %></td>
            <td><%= buttons(friendship) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New Friendship", new_friendship_path %>
  <% else %>
    <h2><%= link_to "Make a Profile", new_profile_path %> to start making friends!</h2>
  <% end %>
</div>
