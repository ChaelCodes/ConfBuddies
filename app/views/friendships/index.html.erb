<h1 class="title">Friendships</h1>

<table class="table">
  <thead>
    <tr>
      <th>Friend</th>
      <th>Buddy</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.friend %></td>
        <td><%= friendship.buddy %></td>
        <td><%= friendship.status %></td>
        <td><%= buttons(friendship) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path %>
